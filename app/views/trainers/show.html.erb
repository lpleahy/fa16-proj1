<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<ul>
    <% @trainer.pokemons.each do |p| %>
        <li>Name: <%= p.name %>, Level: <%= p.level %>, Health: <%= p.health %>
        <%= button_to "Damage!", damage_path(id: p), :class => "button medium", :method => :patch %></li>
    <% end %>
</ul>

<h2>
<% if @trainer == current_trainer %>
    <%= button_to "New Pokemon.", new_path, :class => "button medium", :method => :get %>
<% end %>
</h2>
